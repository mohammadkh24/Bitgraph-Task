{
  "openapi": "3.0.0",
  "info": {
    "title": "bitgraph API",
    "version": "1.0.0",
    "description": "bit-graph task"
  },
  "servers": [
    {
      "url": "localhost"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "All routes about user auth"
    },
    {
      "name": "Users",
      "description": "All routes about users"
    }
  ],
  "paths": {
    "/auth/send": {
      "post": {
        "tags": ["Auth"],
        "summary": "Send OTP",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "phone": {
                    "type": "string",
                    "example": "09123456789"
                  }
                },
                "required": ["phone"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OTP sent successfully"
          },
          "400": {
            "description": "Phone is banned"
          }
        }
      }
    },
    "/auth/verify": {
      "post": {
        "tags": ["Auth"],
        "summary": "Verify OTP and Login/Register",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "phone": {
                    "type": "string",
                    "example": "09123456789"
                  },
                  "otp": {
                    "type": "string",
                    "example": "1234"
                  }
                },
                "required": ["phone", "otp"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login success"
          },
          "201": {
            "description": "User registered and logged in"
          },
          "400": {
            "description": "Wrong or expired OTP"
          }
        }
      }
    },
    "/auth/me": {
      "get": {
        "tags": ["Auth"],
        "summary": "Get current user profile",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Current user info",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": ["Users"],
        "summary": "Get all users (admin only)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": { "type": "integer", "default": 1 }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": { "type": "integer", "default": 10 }
          }
        ],
        "responses": {
          "200": {
            "description": "List of users with pagination",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "users": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/User" }
                    },
                    "pagination": {
                      "type": "object",
                      "properties": {
                        "total": { "type": "integer" },
                        "currentPage": { "type": "integer" },
                        "totalPages": { "type": "integer" },
                        "entity": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden" }
        }
      },
      "patch": {
        "tags": ["Users"],
        "summary": "Edit current user's profile",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "address": { "type": "string" },
                  "username": { "type": "string" },
                  "avatar": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "user": { "$ref": "#/components/schemas/User" }
                  }
                }
              }
            }
          },
          "403": { "description": "You can't edit this user" }
        }
      }
    },
    "/users/{userId}": {
      "get": {
        "tags": ["Users"],
        "summary": "Get single user (admin only)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "User details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": { "$ref": "#/components/schemas/User" }
                  }
                }
              }
            }
          },
          "400": { "description": "Invalid userId" },
          "404": { "description": "User not found" }
        }
      },
      "delete": {
        "tags": ["Users"],
        "summary": "Delete user (admin only)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "User removed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "user": { "$ref": "#/components/schemas/User" }
                  }
                }
              }
            }
          },
          "403": { "description": "Can't remove yourself" },
          "404": { "description": "User not found" }
        }
      }
    },
    "/users/{userId}/role": {
      "put": {
        "tags": ["Users"],
        "summary": "Change user role between ADMIN/USER/TEACHER",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "شناسه کاربری که نقش آن باید تغییر کند",
            "required": true,
            "schema": {
              "type": "string",
              "example": "60d0fe4f5311236168a109ca"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "role": {
                    "type": "string",
                    "enum": ["ADMIN", "USER", "TEACHER"],
                    "description": "نقش جدید کاربر"
                  }
                },
                "required": ["role"],
                "example": {
                  "role": "ADMIN"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "نقش کاربر با موفقیت تغییر یافت.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "نقش کاربر با موفقیت تغییر یافت."
                    },
                    "user": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/courses": {
      "post": {
        "tags": ["Courses"],
        "summary": "Create a new course",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "description": "عنوان دوره",
                    "example": "دوره برنامه‌نویسی Node.js"
                  },
                  "teacherId": {
                    "type": "string",
                    "description": "شناسه کاربر با نقش TEACHER",
                    "example": "60d0fe4f5311236168a109ca"
                  }
                },
                "required": ["title", "teacherId"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "دوره با موفقیت ایجاد شد",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "دوره با موفقیت ایجاد شد."
                    },
                    "course": {
                      "$ref": "#/components/schemas/Course"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "شناسه مدرس معتبر نیست یا اطلاعات ناقص است",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "مدرس معتبر یافت نشد یا نقش اشتباه است."
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Courses"],
        "summary": "Get all courses (with optional title filter)",
        "parameters": [
          {
            "name": "title",
            "in": "query",
            "schema": { "type": "string" },
            "description": "فیلتر دوره‌ها بر اساس عنوان (اختیاری)"
          }
        ],
        "responses": {
          "200": {
            "description": "لیست دوره‌ها",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "courses": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Course"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/courses/{id}": {
      "get": {
        "tags": ["Courses"],
        "summary": "Get course by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "شناسه دوره",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "اطلاعات دوره",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "course": {
                      "$ref": "#/components/schemas/Course"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "دوره یافت نشد",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "دوره یافت نشد."
                    }
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Courses"],
        "summary": "Update a course",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "شناسه دوره",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "description": "عنوان جدید دوره",
                    "example": "دوره پیشرفته Node.js"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "دوره با موفقیت به‌روزرسانی شد",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "دوره با موفقیت به‌روزرسانی شد."
                    },
                    "course": {
                      "$ref": "#/components/schemas/Course"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "دوره یافت نشد",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "دوره یافت نشد."
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Courses"],
        "summary": "Delete a course",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "شناسه دوره",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "دوره با موفقیت حذف شد",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "دوره با موفقیت حذف شد."
                    },
                    "course": {
                      "$ref": "#/components/schemas/Course"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "دوره یافت نشد",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "دوره یافت نشد."
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Course": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "665f20a6f447b3a3f91a9870"
          },
          "title": {
            "type": "string",
            "example": "دوره برنامه‌نویسی Node.js"
          },
          "teacherId": {
            "type": "string",
            "description": "شناسه مدرس دوره",
            "example": "60d0fe4f5311236168a109ca"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-06-10T09:25:43.511Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-06-10T09:25:43.511Z"
          }
        },
        "required": ["title", "teacherId"]
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "665f20a6f447b3a3f91a9870"
          },
          "phone": {
            "type": "string",
            "example": "09123456789"
          },
          "username": {
            "type": "string",
            "example": "09123456789"
          },
          "avatar": {
            "type": "string",
            "example": "/images/OIP.jpg"
          },
          "role": {
            "type": "string",
            "enum": ["USER", "ADMIN", "TEACHER"],
            "example": "USER"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-06-10T09:25:43.511Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-06-10T09:25:43.511Z"
          }
        },
        "required": ["phone"]
      },
      "Course": {
        "type": "object",
        "properties": {
          "_id": { "type": "string", "example": "665f123abc456" },
          "title": { "type": "string", "example": "دوره فیگما" },
          "teacherId": {
            "type": "string",
            "description": "شناسه مدرس دوره",
            "example": "60d0fe4f5311236168a109ca"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-06-10T09:25:43.511Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-06-10T09:25:43.511Z"
          }
        }
        },
        "required": ["title"]
      }
      
    }
    }
  
